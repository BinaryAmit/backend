# Local development environment variables
# Copy to .env and adjust as needed

SECRET_KEY=dev-secret-key
JWT_SECRET=dev-jwt
DEBUG=True
ALLOWED_HOSTS=*

# Allow your local frontend origin(s)
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000
CSRF_TRUSTED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# Use SQLite locally by default. Uncomment to test Postgres via container.
# DATABASE_URL=postgres://user:pass@localhost:5432/webrtc

# Use Redis locally for Channels, or omit to use in-memory (single-process only)
# REDIS_URL=redis://localhost:6379/0
